<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mch.registry.ccs.app.MobileNumberActivity">

		<TextView
			android:text="@string/enter_phone_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/enter_phone_number"
			android:layout_above="@+id/input_phone"
			android:layout_centerHorizontal="true" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@android:string/ok"
			android:id="@+id/btnOK"
			android:layout_toEndOf="@+id/input_phone"
			android:layout_below="@+id/phone_format"/>

		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="phone"
			android:ems="10"
			android:id="@+id/input_phone"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/phone_format"
			android:id="@+id/phone_format"
			android:layout_below="@+id/input_phone"
			android:layout_centerHorizontal="true"/>

	</RelativeLayout>


